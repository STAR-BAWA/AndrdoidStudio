<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shelf"
    tools:context=".AdminMainScreen">


    <androidx.cardview.widget.CardView
        android:id="@+id/Seller_rating_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cardBackgroundColor="#FA0FE633"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.339">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="255dp"
            android:layout_height="85dp"
            android:layout_marginHorizontal="95dp"
            android:layout_marginLeft="115dp"
            android:gravity="center"
            android:text="Seller Rating"
            android:textColor="#fff"
            android:textSize="45dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="101dp"
            android:layout_height="86dp"
            app:srcCompat="@drawable/ic_baseline_star_24" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/adminOrder"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="#FA1D2E9C"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.707">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="280dp"
            android:layout_height="82dp"
            android:layout_marginHorizontal="95dp"
            android:layout_marginLeft="115dp"
            android:gravity="center"
            android:text="Approve Order"
            android:textColor="#fff"
            android:textSize="35dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/ic_baseline_approval_24" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Dashboard_link"
        android:layout_width="215dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="Goto DashBoard"
        android:textColor="#fff"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.918"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963" />

</androidx.constraintlayout.widget.ConstraintLayout>