<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall"
    tools:context=".Registration_activity">

    <ImageView
        android:id="@+id/login_img"
        android:layout_width="320dp"
        android:layout_height="134dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:contentDescription="logo"
        android:src="@drawable/logo_app" />

    <ScrollView
        android:id="@+id/scroll_view_login"
        android:layout_width="match_parent"
        android:layout_height="428dp"
        android:layout_below="@id/login_img"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/register_name_input"
                android:layout_width="365dp"
                android:layout_height="78dp"
                android:layout_below="@id/login_img"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="26dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/icon_user"
                android:drawablePadding="12dp"
                android:hint="Name"
                android:inputType="textPersonName"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_email_input"
                android:layout_width="372dp"
                android:layout_height="85dp"
                android:layout_below="@id/register_name_input"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="26dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/icon_email"
                android:drawablePadding="12dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_phno_input"
                android:layout_width="373dp"
                android:layout_height="85dp"
                android:layout_below="@id/register_email_input"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="26dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/icon_phone"
                android:drawablePadding="12dp"
                android:hint="Phone number"
                android:inputType="number"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_password_input"
                android:layout_width="372dp"
                android:layout_height="85dp"
                android:layout_below="@id/register_phno_input"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="26dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/icon_password"
                android:drawablePadding="12dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_question1_input"
                android:layout_width="372dp"
                android:layout_height="85dp"
                android:layout_below="@id/register_password_input"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="26dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/icon_password"
                android:drawablePadding="12dp"
                android:hint="Where did your parents meet ?"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_question2_input"
                android:layout_width="372dp"
                android:layout_height="85dp"
                android:layout_below="@id/register_question1_input"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="26dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/icon_password"
                android:drawablePadding="12dp"
                android:hint="What was your favourite food ?"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_question3_input"
                android:layout_width="372dp"
                android:layout_height="85dp"
                android:layout_below="@id/register_question2_input"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="26dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/icon_password"
                android:drawablePadding="12dp"
                android:hint="What is your favourite form of exercise ?"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>
    <Button
        android:id="@+id/register_btn"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scroll_view_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="593dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginBottom="5dp"
        android:padding="20dp"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="@color/material_dynamic_neutral30" />

</RelativeLayout>