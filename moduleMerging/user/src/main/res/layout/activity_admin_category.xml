<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:text="Add New Product"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/book_fictional"
            android:layout_width="174dp"
            android:layout_height="183dp"
            android:src="@drawable/junglebook" />

        <ImageView
            android:id="@+id/book_horrors"
            android:layout_width="174dp"
            android:layout_height="183dp"
            android:src="@drawable/horror" />

        <ImageView
            android:id="@+id/book_ncert"
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:src="@drawable/ncert_maths" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_below="@+id/linear1_category_layout"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/book_non_fictional"
            android:layout_width="174dp"
            android:layout_height="match_parent"
            android:src="@drawable/nonfiction" />

        <ImageView
            android:id="@+id/book_crimes"
            android:layout_width="189dp"
            android:layout_height="228dp"
            android:src="@drawable/crime" />

        <ImageView
            android:id="@+id/book_Dramas"
            android:layout_width="183dp"
            android:layout_height="228dp"
            android:src="@drawable/drama" />

    </LinearLayout>


</RelativeLayout>